{
  "name": "@bothub-chat/packages",
  "private": true,
  "version": "2.0.0",
  "description": "Bothub packages",
  "license": "MIT",
  "author": "dev2alert <atmpotn@yandex.ru>",
  "homepage": "https://bothub.chat/",
  "workspaces": [
    "./packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development rollup --watch --config ./rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "release": "yarn build && yarn run publish",
    "sb": "storybook dev -p 6006",
    "build:sb": "storybook build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "commitlint": "commitlint --edit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "publish": "tsx ./scripts/publish.ts",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
